<div class="sideBar">
    <div class="settings">
        {{#ifEquals user.role.name "Admin"}}
        <a href="http://localhost:3000/admin">Beheren</a>
        {{/ifEquals}}
        {{#ifEquals user.role.name "Editor"}}
        <a href="http://localhost:3000/editor">Beheren</a>
        {{/ifEquals}}
        <a href="http://localhost:3000/account">Acount beheren</a>
    </div>

    <div class="playlist">
        <h2>Your playlists</h2>
        <div class="playlist__name">
            {{#each playList}}
            <a href="http://localhost:3000/playlist?name={{name}}&id={{id}}">{{name}}</a>
            {{/each}}
        </div>
    </div>
</div>