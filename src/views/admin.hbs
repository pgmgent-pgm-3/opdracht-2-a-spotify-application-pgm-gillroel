<div class="container-right">

    <div class="container-user info-container">
        <h3>Users</h3>


        <ul>

            {{#each users}}

            <li class="user-info info" data-id="{{id}}">
                <p>{{userMeta.firstname}}</p>
                <p>{{userMeta.lastname}}</p>
                <p>{{userMeta.username}}</p>
                <p>{{email}}</p>
                <p>{{role.name}}</p>

                {{#ifNotEquals email "gillesroels3@outlook.com"}}
                <button class="btnDelete--user"><i class="fa-solid fa-trash"></i></button>
                {{/ifNotEquals}}
            </li>

            {{/each}}
        </ul>
    </div>


    <div class="container-playlist info-container">
        <h3>playlists</h3>
        <ul>
            {{#each playList}}
            <li class="playlist-info info" data-id="{{id}}">
                {{name}}
                <button class="btnDelete--playlist"><i class="fa-solid fa-trash"></i></button>
            </li>
            {{/each}}
        </ul>

        <div class="addSongToPlaylist">

            <form action="addSongToPlaylist" method="post">
                <label for="playlist">choose a playlist:</label>
                <select name="playlist" id="playlist">
                    {{#each playList}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>

                <label for="song">Choose a song:</label>
                <select name="song" id="song">
                    {{#each song}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <button>Add song</button>

            </form>

        </div>

        <div class="addPlaylist">
            <form action="/addPlaylist" method="post">
                <label for="playlist">give a playlist</label>
                <input type="text" id="playlist" placeholder="Name for playlist" name="playlist">

                {{!-- <label for="song"> choose a song:</label> --}}
                {{!-- <select name="song" id="song"> --}}

                </select>

                <label for="user"> choose an user:</label>
                <select name="user" id="user">
                    {{#each users}}
                    <option value="{{id}}">{{userMeta.username}}</option>
                    {{/each}}
                </select>

                <button id="addPlaylist">Add Playlist</button>
            </form>
        </div>
    </div>



    <div class="container-song info-container">
        <h3>Song</h3>
        <ul>
            {{#each song}}

            <li class="song-info info" data-id="{{id}}">
                {{name}}
                {{artist.name}}
                <button class="btnDelete--song"><i class="fa-solid fa-trash"></i></button>
                <button class="btnchange--song" data-id="{{id}}"><i class="fa-solid fa-pen-to-square"></i></button>
            </li>
            {{/each}}
        </ul>

        <form action="/addSong" method="post">
            <label for="song">Give a song</label>
            <input type="text" id="song" placeholder="Name for song" name="song">

            <label for="artist"> choose a artist:</label>
            <select name="artist" id="artist">
                {{#each artist}}
                <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select>
            <button id="addSong">Add Song</button>


        </form>
    </div>

    <div class="album-container info-container">
        <h3>Albums</h3>
        <ul>
            {{#each album}}
            <li class="album-info info" data-id="{{id}}">
                {{name}}
                {{artist.name}}
                <button class="btnDelete--album"><i class="fa-solid fa-trash"></i></button>
            </li>
            {{/each}}
        </ul>

        <form action="/addAlbum" method="post">
            <label for="album">Give a album</label>
            <input type="text" id="album" placeholder="Name for album" name="album">

            <label for="artist"> choose a artist:</label>
            <select name="artist" id="artist">
                {{#each artist}}
                <option value="{{name}}">{{name}}</option>
                {{/each}}
            </select>
            <button id="addAlbum">Add Album</button>
        </form>
    </div>

    <div class="artist-container info-container">
        <h3>Artist</h3>
        <ul>
            {{#each artist}}
            <li class="artist-info info" data-id="{{id}}">{{name}}
            <button class="btnDelete--artist"><i class="fa-solid fa-trash"></i></button>
            <button class="btnchange--artist" data-id="{{id}}"><i class="fa-solid fa-pen-to-square"></i></button>
            </li>
            {{/each}}
        </ul>

                    <form action="/addArtist" method="post">
                        <label for="artist">Give a artist</label>
                        <input type="text" id="artist" placeholder="Name for artist" name="artist">
                        <button>Add artist</button>
                    </form>
    </div>

</div>